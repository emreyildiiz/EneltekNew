@model Demo.Modelsw.Kullanici
@{
    ViewData["Title"] = "Eneltek Hoşgeldiniz...";
}
<div class="col-12 col-xl-12 col-lg-12 text-center" style="width:100%; padding:0; ">
    <div class="container ml-0 mr-0" style="max-width:none;">
        <div class="row" style="height:100vh;">
            <div class=" d-none d-sm-none d-md-none d-lg-block col-lg-8 col-xl-7" style="margin:0; padding:0;">
                <div class="carousel carousel-dark slide" data-bs-ride="carousel" data-interval="5000">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="bg-image d-block w-100" src="../images/205850.jpg">
                        </div>
                        <div class="carousel-item">
                            <img class="bg-image d-block w-100" src=" ../images/414469.jpg">
                        </div>
                        <div class="carousel-item">
                            <img class="bg-image d-block w-100"
                                src=" ../images/fotis-fotopoulos-6gudh_ICpCc-unsplash.jpg">
                        </div>
                    </div>
                </div>
            </div>

            <div id="" class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-5 login-cont container" style="display: flex;
  justify-content: center;
  align-items: center; width:100%;">
                <div class="row justify-content-center" style="width:100%;">
                    <div class="col-10 col-md-10 col-lg-12 col-xl-7">
                        <div class="card shadow">
                            <div class="card-body">
                                <form class="form-signin" asp-action="Index">
                                    <img class="mb-4"
                                        src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt=""
                                        width="72" height="72">
                                    <h1 class="h3 mb-4 font-weight-normal">Giriş Yapın</h1>
                                    <label for="inputEmail" class="sr-only">Email adresi</label>

                                    <input type="email" id="inputEmail" name="username" class="form-control mb-3"
                                        placeholder="Email Adresi" required="" style="height:40px;" autofocus=""
                                        autocomplete="on" asp-for="UserName">

                                    <label for="inputPassword" class="sr-only">Password</label>
                                    <input type="password" id="inputPassword" name="password" class="form-control mb-2"
                                        style="margin-top:2px;height:40px;" placeholder="Şifre" required=""
                                        autocomplete="on" asp-for="Password">
                                    <div class="checkbox mb-2 float-left">
                                        <label>
                                            @Html.EditorFor(x => x.BeniHatirla) Beni Hatırla
                                        </label>
                                    </div>
                                    <button class="btn btn-lg btn-success d-flex btn-block justify-content-center"
                                        type="submit">
                                        Sign
                                        in
                                    </button>
                                    @if (TempData["Login"] != null)
                                    {
                                        @if ((bool)TempData["Login"] == false)
                                        {
                                            <p style="color:red;">Şifreniz Hatalı.</p>
                                        }
                                    }
                                    <p class="mt-5 mb-3 text-muted">© Eneltek 2021</p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-asp-append-version="true"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('.carousel').carousel({

        })
    });
</script>
